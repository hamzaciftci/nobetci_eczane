NODE_ENV=development

# Shared
TZ=Europe/Istanbul

# API
API_PORT=4000
API_HOST=0.0.0.0
DATABASE_URL=postgresql://postgres:postgres@localhost:5433/nobetci
REDIS_URL=redis://localhost:6380
REDIS_MODE=
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=120
CORS_ORIGIN=http://localhost:3000
ADMIN_API_TOKEN=
DB_POOL_MAX=
DB_IDLE_TIMEOUT_MS=10000
DB_SSL_MODE=

# Web
NEXT_PUBLIC_API_BASE_URL=http://localhost:4000
NEXT_PUBLIC_DEFAULT_CITY=istanbul
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Worker
WORKER_CONCURRENCY=8
INGESTION_QUEUE_NAME=ingestion
CONFLICT_QUEUE_NAME=conflicts
PROVINCE_SLUGS=all
INGESTION_PROVINCES=all
ALLOW_STATIC_FALLBACK=0
ALLOW_FALLBACK_FOR_SECONDARY=0
PARSER_ERROR_THRESHOLD_PCT=20
PARSER_ERROR_MIN_RUNS=5

# Source link sync
SOURCE_LINKS_PATH=infra/sources/province-links.csv
SOURCE_POLL_CRON=0 * * * *
PRUNE_MISSING_ENDPOINTS=0
REQUIRE_ALL_81=0
ENABLE_TITCK_SECONDARY=0

# Smoke test
API_BASE_URL=http://localhost:4000
WEB_BASE_URL=http://localhost:3000
SMOKE_CITY=adana

