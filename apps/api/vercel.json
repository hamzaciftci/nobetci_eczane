{
  "installCommand": "if [ -f pnpm-lock.yaml ]; then pnpm install --frozen-lockfile; else pnpm install --no-frozen-lockfile; fi",
  "buildCommand": "pnpm build",
  "outputDirectory": ".",
  "functions": {
    "api/[...route].ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/cron/full-sync",
      "schedule": "0 3 * * *"
    },
    {
      "path": "/api/cron/validate-all",
      "schedule": "*/10 * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/[...route]"
    },
    {
      "src": "/health/(.*)",
      "dest": "/api/[...route]"
    }
  ]
}
