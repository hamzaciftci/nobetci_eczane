{
    "framework":  "vite",
    "buildCommand":  "npm run build",
    "outputDirectory":  "dist",
    "functions":  {
                      "api/**/*.js":  {
                                          "maxDuration":  10
                                      }
                  },
    "crons":  [
                  {
                      "path":  "/api/cron/ingest",
                      "schedule":  "0 0 * * *"
                  }
              ],
    "rewrites":  [
                     {
                         "source":  "/((?!api/).*)",
                         "destination":  "/index.html"
                     }
                 ]
}
